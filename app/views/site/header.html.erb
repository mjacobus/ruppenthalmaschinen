
<div class="full-width-wrapper" id="header">
  <div class="full-width-wrapper" id="abstract-bg">
      <!--Banner-->
      <div class="fixed-width-wrapper" id="banner">
          <a href="index.html" title="" class="logo">
              <img src="/assets/logo.png" alt="Maxx - The Modern HTML template">
          </a>
    
      </div>
      <!--/Banner-->
      <!--Navigation + Search-->
      <div class="fixed-width-wrapper border-radius-5px" id="navigation-bar">
          <div id="g-navigation">
              <ul class="simple-drop-down-menu">
                  <li class="home-page border-radius-left-5px <%= 'current' if simple_menu.active == :home %>">
                      <a href="/">Home</a>
                  </li>
                  <li class="<%= 'current' if simple_menu.active == :about %>">
                      <a href="<%= static_path('sobre-a-empresa') %>" title="">Sobre a empresa</a>
                  </li>
                  <li class="<%= 'current' if simple_menu.active == :products %>">
                      <a href="<%= products_path() %>" title="">Produtos</a>
                      <ul>
                        <% home_products.each do |product| %>
                          <li class="<%= 'current' if product == @product %>"><%= link_to product.name, product_path(product) %></li>
                        <% end %>
                      </ul>
                  </li>
                  <li class="<%= 'current' if simple_menu.active == :services %>">
                      <a href="<%= services_path() %>" title="">Servi√ßos</a>
                      <ul>
                        <% home_services.each do |service| %>
                          <li class="<%= 'current' if service == @service %>"><%= link_to service.title, service_path(service) %></li>
                        <% end %>
                      </ul>
                  </li>
                  <li class="<%= 'current' if simple_menu.active == :contact %>">
                      <a href="<%= contacts_path() %>" title="">Contato</a>
                  </li>
              </ul>
          </div>
