<%
simple_menu.active = :services
breadcrumb.add("Serviços")
%>

  
<!--Body content-->
<div class="full-width-wrapper">
    <div class="fixed-width-wrapper" id="body-content">
        <!--Content-->
        <div id="content" class="fixed-width-wrapper">
            <div class="header-text">
                <ul id="breadcrumbs">
                    <li>
                        <a href="#" title="">Home
                        </a>
                    </li>
                    <li class="current">
                        <a href="#" title="">Serviços
                        </a>
                    </li>
                </ul>
                <h1 class="first-word double-color sp">Serviços
                </h1>
            </div>

            <div class="portfolio">
            
            <div class="portfolio-content three-column clear">
              
              
              
              <% @services.each do |s|%>
              <div class="block" >
                  <a href="<%=  service_path(s) %>" title="<%= s.title %>" rel="prettyPhoto" class="img-border">
                    <% if s.pictures.first %>
                      <%= image_tag s.pictures.first.file.url(:medium) %> 
                    <% end %>
                  </a>
                  <h3 class="first-word">
                    <a href="<%=  service_path(s) %>" title="Read more">
                      <%= s.title %>
                    </a>
                  </h3>
                  <p><%= s.description %></p>
                  <a class="read-more" href="<%=  service_path(s) %>" title="Read more">
                   Ver detalhe
                  </a>
                  <div class="sp">
                  </div>
              </div>
              <% end %>
            </div>
  
            <!--Pagination-->
            <div class="clear"></div>
            <div class="page-pagination clear fixed-width-wrapper">
                <a href="#" title="">Prev
                </a>
                <a href="#" title="">1
                </a>
                <a href="#" title="" class="current">2
                </a>
                <a href="#" title="">3
                </a>
                <a href="#" title="">4
                </a>
                <a href="#" title="">5
                </a>
                <span>...
                </span>
                <a href="#" title="">15
                </a>
                <a href="#" title="">Next
                </a>
            </div>
            <!--/Pagination-->
  
          <div class="page-pagination clear fixed-width-wrapper">
            <%= paginate(@services) %>
          </div>
  
          </div>
        </div>
        <!--/Content-->
    </div>
</div>