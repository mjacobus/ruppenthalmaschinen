<%
simple_menu.active = :products

breadcrumb.add("Produtos", products_path)
breadcrumb.add(@product.type.name.pluralize, product_type_path(@product.type.slug))
breadcrumb.add(@product.name)
%>

<div class="full-width-wrapper">
            <div class="fixed-width-wrapper" id="body-content">
                <!--Content-->
                <div id="content" class="float-left content-left">
                    <div class="header-text">
                        <h1 class="first-word double-color sp"><%= @product.name %></h1>
                    </div>
                    <div class="post entry-content">
                      <h2>Sobre o produto</h2>
                      <p>
                        <strong>Tipo:</strong> <%= @product.type.name %><br/>
                        <strong>Applicação:</strong> <%= @product.application %>
                      </p>
                      <h2>Especificações técnicas</h2>
                      <ul>
                      <% @product.features.each do |feature| %>
                        <li><strong><%= feature.name %>:</strong> <%= feature.value %></li>
                      <% end %>
                      </ul>
                      <% if @product.pictures %>
                      <h2>Fotos</h2>
                      
                      <div class="images">
                        <div class="main">
                          <%= picture(@product.pictures.first) %>
                        </div>
                        <div class="thumbs">
                          <% @product.pictures.each do |picture| %>
                            <%= link_to picture.file.url(), :class => :img do %>
                              <%= picture(picture, :small) %>
                            <% end%> 
                          <% end %>
                        </div>
                      </div>

                      <script type="text/javascript">
                        $('.images a.img').click(function(){
                          $('.images .main img').attr('src', $(this).attr('href'));
                          return false;
                        });
                      </script>
                    <% end %>
                    </div>
                    
                    <% if @product.video %>
                    <h2>Veja um vídeo deste produto</h2>
                    <div id="home">
                      <iframe width="420"
                              height="315"
                              src="http://www.youtube.com/embed/<%= @product.video %>?rel=0&controls=2&showinfo=0&theme=light&=1"
                              frameborder="0"
                              allowfullscreen>
                      </iframe>
                    </div>
                    <% end %>
                </div>
                <!--/Content-->
                <!--Sidebar-->
                <div id="sidebar" class="float-right">
                    
                    <!--box-->
                    <div class="box">
                        <h1 class="first-word double-color sp">Outros Produtos</h1>
                        <ul class="list cat">
                            <li>
