<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : breadcrumb.titleize %></title>
    <%= stylesheet_link_tag    "site", :media => "all" %>
    <%= javascript_include_tag "site" %>
    <%= csrf_meta_tags %>
    <%= ganalytics %>
  </head>
  <body class="<%= params[:controller].parameterize %>_controller <%= params[:action].parameterize %>_action">
  
  <%= render :template => "site/header" %>
  <%= raw breadcrumb.prepend("Home","/") %>
  
  <div id="breadcrumb"></div>
  
  <%= messages %>
  
  <div id="view_container"><%= yield %></div>
  
  <!--Footer Extra-->
    <div class="full-width-wrapper" id="footer-extra-wrapper">
        <div class="fixed-width-wrapper">
            <div id="copyright">
                <a href="#" class="logo float-left" title="">
                    <img src="/assets/logo-footer.png" alt="">
                </a>
                <ul>
                    <li>(r) 2012 Marca Registrada</li>
                </ul>
                <a href="#" class="back-to-top sprite" title="Back to top">Topo</a>
            </div>
        </div>
    </div>
    <!--/Footer Extra-->

  </body>
</html>
