<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : breadcrumb.titleize %></title>
  <%= stylesheet_link_tag    "site/reset", :media => "all" %>
  <%= stylesheet_link_tag    "site/base", :media => "all" %>
  <%= stylesheet_link_tag    "site/tiptip", :media => "all" %>
  <%= stylesheet_link_tag    "site/short-code", :media => "all" %>
  <%= stylesheet_link_tag    "site/prettyphoto", :media => "all" %>
  <%= stylesheet_link_tag    "site/css3", :media => "all" %>
  <%= stylesheet_link_tag    "site/slider", :media => "all" %>
  <%= stylesheet_link_tag    "site/short-code", :media => "all" %>
  <%= stylesheet_link_tag    "site/piecemaker", :media => "all" %>
  
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "jquery.nivo.slider" %>
  <%= javascript_include_tag "scripts" %>
  <%= javascript_include_tag "custom" %>
  <%= javascript_include_tag "shortcode" %>
  
  
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller].parameterize %>_controller <%= params[:action].parameterize %>_action">
  
  
  <%= raw breadcrumb.prepend("Home","/") %>
  
  <div id="breadcrumb"></div>
  <div id="view_container"><%= yield %></div>

</body>
</html>
